<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/link_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/toolbar"
        android:background="@color/dark_blue"
        android:elevation="4dp">

        <TextView
            android:id="@+id/link_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:autoLink="all"
            android:text="@string/standar_url"
            android:textColorLink="@color/orange"
            android:textSize="21sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrolling_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_layout"
        android:layout_below="@id/link_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/uriPath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:autoLink="all"
                tools:text="Hallo" />

            <TextView
                android:id="@+id/txtBarCodeScannerInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/barcode_scanner_msg"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/technical_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autoLink="all"
                android:text="@string/technical_info" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <guru.stefma.shareviahttp.views.RoundedImageButtonWithTextView
            android:id="@+id/button_rate"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:imageSrc="@drawable/ic_rate_app"
            app:text="@string/button_rate" />

        <guru.stefma.shareviahttp.views.RoundedImageButtonWithTextView
            android:id="@+id/change_ip"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:imageSrc="@drawable/ic_ip"
            app:text="@string/change_ip" />


        <guru.stefma.shareviahttp.views.RoundedImageButtonWithTextView
            android:id="@+id/stop_server"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:imageSrc="@drawable/ic_stop"
            app:text="@string/stop_server" />

        <guru.stefma.shareviahttp.views.RoundedImageButtonWithTextView
            android:id="@+id/button_share_url"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:imageSrc="@drawable/ic_share"
            app:text="@string/share_url" />
    </LinearLayout>
</RelativeLayout>